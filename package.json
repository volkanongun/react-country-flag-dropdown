{
  "name": "country-flags-dropdown",
  "version": "0.1.0",
  "private": false,
  "description": "This component lists the country flags with phone codes with search filtering ability and dropdown selection with keyboard.",
  "keywords": [
    "react",
    "typescript",
    "country",
    "country flags",
    "dropdown",
    "country flags dropdown"
  ],
  "author": "Volkan Ongun (volkanongun)",
  "license": "MIT",
  "scripts": {
    "build": "npm run esm && npm run cjs",
    "esm": "tsc && npm run copy-files-esm",
    "cjs": "tsc --module commonjs --outDir dist/cjs && npm run copy-files-cjs",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
    "copy-files-cjs": "copyfiles -u 1 src/components/PhoneNumberSelectorWithFlags/images/**/*.svg src/components/PhoneNumberSelectorWithFlags/**/*.scss dist/cjs/",
    "copy-files-esm": "copyfiles -u 1 src/components/PhoneNumberSelectorWithFlags/images/**/*.svg src/components/PhoneNumberSelectorWithFlags/**/*.scss dist/esm/",
    "prepare": "npm run build",
    "prepublishOnly": "npm run prettier && npm run lint"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "dependencies": {
    "react-click-away-listener": "^2.2.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sass": "^1.62.1",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/volkanongun/react-country-flag-dropdown.git"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
